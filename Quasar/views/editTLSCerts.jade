include mixins/headers.jade

extends layout

block headerAdditions

block content
  +header("Upload New TLS Certs")
    form(method='post', enctype='multipart/form-data')
      p TLS Certificate
        input(type='file', name='cert')
      p TLS Private Key
        input(type='file', name='key')
      p Note: You will have to restart Quasar for this change to take effect
      input(type='submit') Submit
