include mixins/headers.jade

extends layout

block content
  +header("Create New User Account")(style='text-align:center; display: block;')
    p Note that this new account will replace the default username and password.
    form#createUser(method='post', action='/createInitialUser', autocomplete='off')
      table(align='center', border='0', style='background-color: #D0E9FC; padding:15px; border-collapse:collapse; border: 2px solid black;')
        tr
          td
            label Username
          td
            input(type='text', name='username', size='20')
        tr
          td
            label Password
          td
            input(type='password', name='password', size='20') 
        tr
          td
          td
      button(type='button', onClick='location.href="/welcome"')
        img.buttonIcon(src="images/back.png")
        span.buttonSpan Back
      
      button(type='nextButton', onClick='$("#createUser").submit();')
        span.buttonSpan Continue to basic options &nbsp
        img.buttonIcon(src="images/forward.png")


