  var closeLightbox = function(){
      enableBackground($('#setup')[0]);
      var table = $('#configureScriptTable');
      var tableChildren = table.find("*");
      scriptConfigurations[currentLightboxIndex] = {};
      for(var i = 0; i < tableChildren.length; i++)
