      var setName = 0;
      if (profile.portSets.length > 0) {
        setName = String(profile.portSets[profile.portSets.length - 1].setName + 1);
      }

      var portSet = {setName: setName
        , ICMPBehavior: 'open'
        , TCPBehavior: 'closed'
        , UDPBehavior: 'closed'
        , PortExceptions: []
      }

      // Push to the profile object
